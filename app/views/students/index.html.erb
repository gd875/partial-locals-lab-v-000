<%= form_tag students_path, method: :get do %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: 'nil' %>
<% end %>
<% if @students %>
    <% @students.each do |student| %>
        <%= render partial: "students/student", locals: {student: student} %>
    <% end %>
<% end %>
